{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "title": "josephbergen.com",
  "properties": {
    "site_info": {
      "type": "object",
      "title": "Site Info",
      "properties": {
        "title": {
          "type": "string",
          "title": "Title",
          "description": "Site title"
        }
      }
    },
    "pages": {
      "type": "array",
      "properties": {},
      "title": "Pages",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "body": {
            "type": "string",
            "title": "body",
            "format": "markdown"
          },
          "media": {
            "type": "array",
            "title": "media",
            "items": {
              "type": "string"
            }
          },
          "has_posts_of_type": {
            "type": "string",
            "title": "has_posts_of_type"
          },
          "has_media_grid": {
            "type": "boolean",
            "title": "Has Media Grid",
            "description": "shows grid of media"
          }
        }
      }
    },
    "posts": {
      "type": "array",
      "properties": {},
      "title": "Posts",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "slug": {
            "type": "string",
            "title": "slug",
            "description": "web friendly string identifier for the url and image pattern"
          },
          "media": {
            "type": "array",
            "title": "Media",
            "description": "media attached to the project (images, videos, etc)",
            "items": {
              "type": "string"
            }
          },
          "body": {
            "type": "string",
            "title": "body",
            "format": "markdown"
          },
          "visible": {
            "type": "boolean",
            "title": "visible"
          }
        }
      }
    },
    "media": {
      "type": "array",
      "properties": {},
      "title": "Media",
      "items": {
        "type": "object",
        "properties": {
          "filename": {
            "type": "string",
            "title": "filename",
            "description": "include file extension"
          },
          "title": {
            "type": "string",
            "title": "title"
          },
          "caption": {
            "type": "string",
            "title": "caption",
            "format": "markdown"
          },
          "id": {
            "type": "string",
            "title": "id"
          },
          "year": {
            "type": "string",
            "title": "Year",
            "description": "date completed"
          },
          "media": {
            "type": "string",
            "title": "Media"
          },
          "dimension": {
            "type": "string",
            "title": "Dimension",
            "description": "H x W x D"
          },
          "include_in_feed_grid": {
            "type": "boolean",
            "title": "Include in feed grid"
          },
          "tags": {
            "type": "array",
            "title": "Tags",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}