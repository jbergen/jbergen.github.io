{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "title": "josephbergen.com",
  "properties": {
    "site_info": {
      "type": "object",
      "title": "Site Info",
      "properties": {
        "title": {
          "type": "string",
          "title": "Title",
          "description": "Site title"
        }
      }
    },
    "pages": {
      "type": "array",
      "properties": {},
      "title": "Pages",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "body": {
            "type": "string",
            "title": "body",
            "format": "markdown"
          },
          "image": {
            "type": "string",
            "title": "image"
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "properties": {},
      "title": "Projects",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "title": "Name"
          },
          "slug": {
            "type": "string",
            "title": "slug",
            "description": "web friendly string identifier for the url and image pattern"
          },
          "media": {
            "type": "array",
            "title": "Media",
            "description": "media attached to the project (images, videos, etc)",
            "items": {
              "type": "string"
            }
          },
          "body": {
            "type": "string",
            "title": "body",
            "format": "markdown"
          },
          "visible": {
            "type": "boolean",
            "title": "visible"
          }
        }
      }
    }
  }
}